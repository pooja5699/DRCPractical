<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/size_8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBestSeller"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_300dp"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBrand"
        style="@style/FontBold.ColorGray.Size16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textAllCaps="true"
        tools:text="@string/best_sellers" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        style="@style/FontBold.ColorBlack.Size16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/size_2dp"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:textAllCaps="true"
        tools:text="@string/best_sellers" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        style="@style/FontBold.ColorMagenta.Size16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/size_16dp"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textAllCaps="true"
        tools:text="@string/best_sellers" />

</LinearLayout>